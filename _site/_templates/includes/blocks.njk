<div class="shops-wrapper d-flex" data-type="type-set-02">
  {% for item in blocks %}
    <div class="half block-image">

    </div>
    <div class="half block-text">

    </div>
    <li class="shop-item" data-color="{{item.data-color|safe}}">
      <span class="shop-title">{{item.title|safe}}</span>
      {# <span class="block-text">{{item.text|markdown|safe}}</span> #}
      {% if item.tel %}
        <a class="shop-tel" href="tel:{{item.tel|safe|nospaces}}" target="_blank">Tel. {{item.tel|safe}}</a>
      {% endif %}
    </li>
  {% endfor %}
</div>
